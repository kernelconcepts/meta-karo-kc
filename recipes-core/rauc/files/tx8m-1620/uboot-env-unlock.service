[Unit]
Description=Unlocker for U-Boot Environment
Before=rauc.service rauc-mark-good.service rauc-mark-bad.service
OnFailure=systemd-reboot.service

[Service]
ExecStart=/bin/sh -c '/bin/echo 0 > /sys/devices/platform/soc@0/soc@0:bus@30800000/30b40000.mmc/mmc_host/mmc0/mmc0:0001/block/mmcblk0/mmcblk0boot0/force_ro'
Type=oneshot

[Install]
WantedBy=multi-user.target
